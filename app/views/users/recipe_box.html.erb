<div class="page10">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="row">
				<div class="col-md-12 title">Recipe Box</div>
			</div>

			<div class="row recipes-container">
				<% @recipes.each do |recipe| %>
					<div class="col-md-3 col-sm-6" is-recipe="1" data-id="<%= recipe.id %>">
						<div class="entry">
							<div class="image">
								<img src="<%= recipe.image.url %>" />
							</div>
							<div class="name"><%= recipe.dish_types_concat %></div>
							<div class="description"><%= recipe.title %></div>
							<div class="action-container">
								<a href="<%= recipe_detail_path(slug: recipe.slug) %>"><div class="action invert-button-colors"> GET RECIPE</div></a>
								<a href="javascript:;" is-recipe-delete="1" data-id="<%= recipe.id %>"><div class="delete"></div></a>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
