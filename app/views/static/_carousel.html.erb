<div id="<%= carousel_name %>" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% images.each_with_index do | image, count | %>
      <li data-target="#<%= carousel_name %>" data-slide-to="<%= "#{count}" %>" class="<%= "active" if count == 0 %>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <% images.each_with_index do | image, count | %>
      <% if image.url? %>
        <div class="item <%= "active" if count == 0 %>"
             onclick='window.location.href="<%= image.url %>"'
             style='background-image: url("<%= image.image.url %>"); cursor: pointer;'>
        </div>
      <% else %>
        <div class="item <%= "active" if count == 0 %>"
             style='background-image: url("<%= image.image.url %>");'>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#<%= carousel_name %>" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#<%= carousel_name %>" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

</div>
